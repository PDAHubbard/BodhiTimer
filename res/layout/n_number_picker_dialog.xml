<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	>
	<ScrollView
		android:id="@+id/ScrollView01" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:scrollbars="vertical"
		android:layout_centerInParent="true"
		>
		<LinearLayout
	        android:id="@+id/container"
	        android:gravity="center"
	        android:layout_width="300dp"
	        android:layout_height="250dp"
	        android:orientation="vertical"
	        android:background="@drawable/glass"
	        >

			<LinearLayout
		        android:id="@+id/hour_cont"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
			    <TextView
					android:id="@+id/text_hour" 
					android:layout_width="40dp"
					android:layout_height="match_parent"
					android:gravity="center"
					android:text="@string/H"
					android:padding="10dp"
					android:textSize="17sp"
					android:textColor="#FFFFFF"
				/>
				<Gallery 
					android:layout_width="match_parent" 
					android:id="@+id/gallery_hour" 
					android:spacing="6dp" 
					android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
		        android:id="@+id/min_cont"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
			
				<TextView
					android:id="@+id/text_min" 
					android:layout_width="40dp"
					android:layout_height="match_parent"
					android:gravity="center"
					android:text="@string/M"
					android:textSize="17sp"
					android:padding="10dp"
					android:textColor="#FFFFFF"
				/>
				<Gallery 
					android:layout_width="match_parent" 
					android:id="@+id/gallery_min" 
					android:spacing="6dp" 
					android:textColor="@color/gallery_item_color" 
					android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
		        android:id="@+id/sec_cont"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
				<TextView
					android:id="@+id/text_sec" 
					android:layout_width="40dp"
					android:layout_height="match_parent"
					android:gravity="center"
					android:textColor="#FFFFFF"
					android:text="@string/S"
					android:textSize="17sp"
					android:padding="10dp"
				/>
				<Gallery 
					android:layout_width="match_parent" 
					android:id="@+id/gallery_sec" 
					android:textColor="@color/gallery_item_color" 
					android:spacing="6dp" 
					android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
		        android:id="@+id/pre_button_cont"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
				<Button
				    android:id="@+id/btn1"
				    android:text="@string/pre1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.33" 
				    />
				<Button
				    android:id="@+id/btn2"
				    android:text="@string/pre2"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.33" 
				    />
				<Button
				    android:id="@+id/btn3"
				    android:text="@string/pre3"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.33" 
				    />
				<Button
				    android:id="@+id/btn4"
				    android:visibility="gone"
				    android:text="@string/pre4"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.33" 
				    />
			</LinearLayout>			
			<LinearLayout
		        android:id="@+id/button_cont"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
				<Button
				    android:id="@+id/btnCancel"
				    android:text="@android:string/cancel"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.5" 
				    />
				<Button
				    android:id="@+id/btnOk"
				    android:text="@android:string/ok"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.5" 
				    />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
